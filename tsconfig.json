{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "noImplicitAny": false,
    "strict": false,
    "module": "commonjs",
    "target": "es2018",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": [
    "backend/**/*",
    "frontend/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.backend.json"
    },
    {
      "path": "./tsconfig.frontend.json"
    }
  ]
}
